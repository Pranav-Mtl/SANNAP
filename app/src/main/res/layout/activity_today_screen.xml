<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/Toolbar_Theme"
        android:layout_gravity="center"
        android:elevation="8dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:layout_gravity="start"
            android:layout_centerInParent="true"
            android:textSize="@dimen/toolbar_text_size"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Period"
            android:background="@color/light_pink"
            android:textSize="@dimen/text_size"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_peroid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_period"
                />
            <TextView
               android:layout_toRightOf="@id/iv_peroid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Period Log"
                android:layout_centerInParent="true"
                android:paddingLeft="5dp"
                android:textColor="@color/button_text_color"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Cycle"
            android:background="@color/light_pink"
            android:textSize="@dimen/text_size"
            />
        <RelativeLayout
            android:id="@+id/today_btn_spotting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_spotting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_spotting"
                />
            <TextView
                android:layout_toRightOf="@id/iv_spotting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spotting"
                android:paddingLeft="5dp"
                android:layout_centerInParent="true"
                android:textColor="@color/button_text_color"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_right_arrow"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/today_btn_cervical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_cervical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_cervical"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cervical Mucus Quality"
                android:textColor="@color/button_text_color"
                android:paddingLeft="5dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_cervical"

                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_right_arrow"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/today_btn_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_temperature"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basal Body Temperature"
                android:textColor="@color/button_text_color"
                android:paddingLeft="5dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_temperature"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_right_arrow"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/today_btn_ovulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_ovulation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_ovulation"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ovulation Test"
                android:textColor="@color/button_text_color"
                android:paddingLeft="5dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_ovulation"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_right_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Personal"
            android:background="@color/light_pink"
            android:textSize="@dimen/text_size"
            />

        <RelativeLayout
            android:id="@+id/today_btn_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_body"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Body"
                android:textColor="@color/button_text_color"
                android:paddingLeft="5dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_body"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_right_arrow"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/today_btn_mood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_mood"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mood"
                android:textColor="@color/button_text_color"
                android:paddingLeft="5dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_mood"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_right_arrow"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_notes"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="@color/button_text_color"
                android:paddingLeft="5dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_notes"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_right_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Intimacy"
            android:background="@color/light_pink"
            android:textSize="@dimen/text_size"
            />
        <RelativeLayout
            android:id="@+id/today_btn_sexual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_sex"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexual Activity"
                android:textColor="@color/button_text_color"
                android:paddingLeft="5dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_sex"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_right_arrow"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/today_btn_pill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/iv_pill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_pill"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pill Intake"
                android:textColor="@color/button_text_color"
                android:paddingLeft="5dp"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_pill"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_right_arrow"
                />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>


