<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.sannap.PeriodLogDetail">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/Toolbar_Theme"
        android:layout_gravity="center"
        android:elevation="8dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">


        <TextView
            android:id="@+id/log_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/toolbar_text_size"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <ImageButton
            android:id="@+id/log_detail_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button_customized"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/small_text_size"
            android:layout_alignParentRight="true"
            android:minHeight="@dimen/button_size"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:background="@color/light_bg"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Spotting"
                android:textStyle="bold"
                android:textColor="@color/textColorDark"
                />

            <TextView
                android:id="@+id/log_detail_spotting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/textColorDark"
                />

        </LinearLayout>

        <!--cervical-->

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:background="@color/light_bg"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cervical Mucus Quality"
                android:textStyle="bold"
                android:textColor="@color/textColorDark"
                />

            <TextView
                android:id="@+id/log_detail_cervical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/textColorDark"
                />

        </LinearLayout>

        <!--temperature-->

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:background="@color/light_bg"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Basal Body Temperature"
                android:textStyle="bold"
                android:textColor="@color/textColorDark"
                />

            <TextView
                android:id="@+id/log_detail_temperature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/textColorDark"
                />

        </LinearLayout>

        <!--Ovulation-->

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:background="@color/light_bg"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ovulation"
                android:textStyle="bold"
                android:textColor="@color/textColorDark"
                />

            <TextView
                android:id="@+id/log_detail_ovulation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/textColorDark"
                />

        </LinearLayout>

        <!--Body-->

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:background="@color/light_bg"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Body"
                android:textStyle="bold"
                android:textColor="@color/textColorDark"
                />

            <TextView
                android:id="@+id/log_detail_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/textColorDark"
                />

        </LinearLayout>


        <!--Mood-->

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:background="@color/light_bg"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mood"
                android:textStyle="bold"
                android:textColor="@color/textColorDark"
                />

            <TextView
                android:id="@+id/log_detail_mood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/textColorDark"
                />

        </LinearLayout>

        <!--Notes-->

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:background="@color/light_bg"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notes"
                android:textStyle="bold"
                android:textColor="@color/textColorDark"
                />

            <TextView
                android:id="@+id/log_detail_notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/textColorDark"
                />

        </LinearLayout>

        <!--sexual-->

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:background="@color/light_bg"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sexual Activity"
                android:textStyle="bold"
                android:textColor="@color/textColorDark"
                />

            <TextView
                android:id="@+id/log_detail_sexual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/textColorDark"
                />

        </LinearLayout>

        <!--pill-->

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:background="@color/light_bg"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pill Intake"
                android:textStyle="bold"
                android:textColor="@color/textColorDark"
                />

            <TextView
                android:id="@+id/log_detail_pill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/textColorDark"
                />

        </LinearLayout>





    </LinearLayout>

    </ScrollView>

</RelativeLayout>
